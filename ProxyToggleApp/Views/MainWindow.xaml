<Window x:Class="ProxyToggleApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ProxyToggleApp.Views"
        Title="Proxy Toggle" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
        WindowStyle="SingleBorderWindow">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <local:StatusColorConverter x:Key="StatusColorConverter"/>
        
        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF106EBE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF005A9E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FFE1E1E1"/>
                                <Setter Property="Foreground" Value="#FF9E9E9E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFF3F3F3"/>
            <Setter Property="Foreground" Value="#FF323130"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFD1D1D1"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFE1E1E1"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFCFCFCF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FFF8F8F8"/>
                                <Setter Property="Foreground" Value="#FF9E9E9E"/>
                                <Setter Property="BorderBrush" Value="#FFE1E1E1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFD1D1D1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#FF0078D4"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#FF0078D4"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFE1E1E1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#40000000" Direction="270" ShadowDepth="2" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="#FFF8F8F8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Border Grid.Row="0" Background="#FF0078D4" Height="60">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- App Icon and Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" 
                           VerticalAlignment="Center" 
                           Margin="20,0">
                    <Ellipse Width="32" Height="32" 
                            Fill="White" 
                            Margin="0,0,12,0"/>
                    <TextBlock Text="Proxy Toggle" 
                              FontSize="20" 
                              FontWeight="SemiBold" 
                              Foreground="White" 
                              VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Settings Button -->
                <Button Grid.Column="1" 
                       Content="âš™ï¸ Settings" 
                       Command="{Binding OpenSettingsCommand}"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Margin="0,0,20,0"
                       Background="Transparent"
                       BorderThickness="1"
                       BorderBrush="White"
                       Foreground="White"
                       Padding="12,6"
                       FontSize="12"
                       Cursor="Hand"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto" 
                     HorizontalScrollBarVisibility="Disabled"
                     Margin="40,40,40,20">
            <StackPanel MaxWidth="600" HorizontalAlignment="Center">
                
                <!-- Status Card -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,30">
                    <StackPanel>
                        <TextBlock Text="Current Status" 
                                  FontSize="18" 
                                  FontWeight="SemiBold" 
                                  Foreground="#FF323130" 
                                  Margin="0,0,0,16"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Status Indicator -->
                            <Ellipse Grid.Column="0" 
                                    Width="16" Height="16" 
                                    VerticalAlignment="Center" 
                                    Margin="0,0,12,0">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="Red"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsProxyEnabled}" Value="True">
                                                <Setter Property="Fill" Value="Green"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            
                            <!-- Status Text -->
                            <TextBlock Grid.Column="1" 
                                      Text="{Binding StatusText}" 
                                      FontSize="16" 
                                      Foreground="#FF323130" 
                                      VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Configuration Card -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,30">
                    <StackPanel>
                        <TextBlock Text="Proxy Configuration" 
                                  FontSize="18" 
                                  FontWeight="SemiBold" 
                                  Foreground="#FF323130" 
                                  Margin="0,0,0,16"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" 
                                      Text="Proxy Server:" 
                                      FontSize="14" 
                                      Foreground="#FF605E5C" 
                                      VerticalAlignment="Center" 
                                      Margin="0,0,16,0"/>
                            
                            <TextBox Grid.Column="1" 
                                    Text="{Binding ProxyServer, UpdateSourceTrigger=PropertyChanged}" 
                                    Style="{StaticResource ModernTextBoxStyle}"
                                    IsEnabled="{Binding IsOperationInProgress, Converter={StaticResource InverseBooleanConverter}}"/>
                        </Grid>
                        
                        <TextBlock Text="Examples: 127.0.0.1:8080, proxy.company.com:3128" 
                                  FontSize="12" 
                                  Foreground="#FF605E5C" 
                                  Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Actions Card -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,30">
                    <StackPanel>
                        <TextBlock Text="Actions" 
                                  FontSize="18" 
                                  FontWeight="SemiBold" 
                                  Foreground="#FF323130" 
                                  Margin="0,0,0,16"/>
                        
                        <!-- Progress Bar -->
                        <ProgressBar IsIndeterminate="{Binding IsOperationInProgress}" 
                                    Height="4" 
                                    Margin="0,0,0,16"
                                    Background="#FFE1E1E1"
                                    Foreground="#FF0078D4"
                                    Visibility="{Binding IsOperationInProgress, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        
                        <!-- Action Buttons -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Button Grid.Column="0" 
                                   Content="ðŸ”— Enable Proxy" 
                                   Command="{Binding EnableProxyCommand}"
                                   Style="{StaticResource ModernButtonStyle}"
                                   Height="48"
                                   IsEnabled="{Binding IsOperationInProgress, Converter={StaticResource InverseBooleanConverter}}"/>
                            
                            <Button Grid.Column="2" 
                                   Content="ðŸ”“ Disable Proxy" 
                                   Command="{Binding DisableProxyCommand}"
                                   Style="{StaticResource SecondaryButtonStyle}"
                                   Height="48"
                                   IsEnabled="{Binding IsOperationInProgress, Converter={StaticResource InverseBooleanConverter}}"/>
                        </Grid>
                        
                        <!-- Refresh Button -->
                        <Button Content="ðŸ”„ Refresh Status" 
                               Command="{Binding RefreshStatusCommand}"
                               Style="{StaticResource SecondaryButtonStyle}"
                               Height="40"
                               Margin="0,16,0,0"
                               IsEnabled="{Binding IsOperationInProgress, Converter={StaticResource InverseBooleanConverter}}"/>
                    </StackPanel>
                </Border>

                <!-- Features Card -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Features" 
                                  FontSize="18" 
                                  FontWeight="SemiBold" 
                                  Foreground="#FF323130" 
                                  Margin="0,0,0,16"/>
                        
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Feature Items -->
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="âœ…" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="Windows System Proxy" FontSize="14" Foreground="#FF605E5C"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="âœ…" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="Git Global Proxy Configuration" FontSize="14" Foreground="#FF605E5C"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="âœ…" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="npm Proxy Configuration" FontSize="14" Foreground="#FF605E5C"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="3" Orientation="Horizontal">
                                <TextBlock Text="âœ…" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="Environment Variables (HTTP_PROXY, HTTPS_PROXY)" FontSize="14" Foreground="#FF605E5C"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
